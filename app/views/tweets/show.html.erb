<div class="container">
  <div class="columns is-multiline">
    <div class="column is-6 is-offset-3">
      <div class="content is-size-3">
        <h3><%= @tweets.username %></h3>
      </div>
    </div>

    <div class="column is-6 is-offset-3">
      <div class="card">
        <div class="card-content">
          <div class="content">
            <p><%= @tweets.body %></p>
          </div>
        </div>
        <footer class="card-footer">
          <%= link_to "Back", root_path, class: "card-footer-item" %>

          <%= link_to "Edit", edit_tweet_path(@tweets), class: "card-footer-item" %>

          <%= link_to "Delete", tweet_path(@tweets), method: :delete,
              data: { confirm: "Are you sure you want to delete this tweet?" },
              class: "card-footer-item" %>
        </footer>
      </div>
    </div>
  </div>
</div>